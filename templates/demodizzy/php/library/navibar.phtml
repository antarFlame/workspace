<?php /** @var umiTemplaterPHP $this */ ?>
<?php /** @var array $variables */ ?>

<?php
    $count = umiCount($variables['items']['nodes:item']);
    $i = 0;
?>

<div class="breadcrumbs">
    <?php foreach($variables['items']['nodes:item'] as $item) {
        if(++$i < $count) {
            if($item["attribute:link"] == '/shop/') {
                $item["attribute:link"] = '/';
            }
            echo "<a class='crumb' href='{$item["attribute:link"]}'>{$item['node:text']}</a> > ";
        } else {
            echo "<span class='crumb'>{$item['node:text']}</span>";
        }
    } ?>
</div>
